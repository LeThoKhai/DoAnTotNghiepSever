@model WebSiteHocTiengNhat.Models.ApplicationUser

<h2 class="mb-4">Chi tiết người dùng</h2>
<div class="card p-4 shadow-sm">
    <div class="mb-3">
        <strong>Email:</strong> @Model.Email
    </div>
    <div class="mb-3">
        <strong>Tên đăng nhập:</strong> @Model.UserName
    </div>
    <div class="mb-3">
        <strong>Phone:</strong> @Model.PhoneNumber
    </div>
    <div class="mb-3">
        <strong>Địa chỉ:</strong> @Model.Address
    </div>
    <div class="mb-3">
        <strong>Ngày đăng ký:</strong> @(Model.VipActivatedDate?.ToString("dd/MM/yyyy") ?? "Chưa kích hoạt")
    </div>
</div>
<div class="mt-3">
    <a href="@Url.Action("Index")" class="btn btn-primary">Quay lại danh sách</a>
</div>
