@model WebSiteHocTiengNhat.Models.ExamQuestion
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Create exam question";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="ExamId" />
    <div class="form-group">
        <label asp-for="CategoryQuestionId"></label>
        <select asp-for="CategoryQuestionId" asp-items="ViewBag.CategoryQuestion" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="QuestionContent"></label>
        <textarea asp-for="QuestionContent" class="form-control" value="Empty">Question</textarea>
        <span asp-validation-for="QuestionContent" class="text-danger"></span>
    </div>
    <!-- Textbox for Link -->
    <div class="form-group">
        <label asp-for="Link" as for="audioFile">Upload Audio/Image</label>
        <input asp-for="Link" type="file" name="audioFile" id="audioFile" class="form-control" accept="audio/*" />
    </div>
    <div class="form-group">
        <label asp-for="OptionA">A</label>
        <input asp-for="OptionA" class="form-control" value="" />
        <span asp-validation-for="OptionA" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="OptionB">B</label>
        <input asp-for="OptionB" class="form-control" value="" />
        <span asp-validation-for="OptionB" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="OptionC">C</label>
        <input asp-for="OptionC" class="form-control" value="" />
        <span asp-validation-for="OptionC" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="OptionD">D</label>
        <input asp-for="OptionD" class="form-control" value="" />
        <span asp-validation-for="OptionD" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CorrectAnswer"></label>
        <select asp-for="CorrectAnswer" asp-items="ViewBag.CorrectAnswer" class="form-control"></select>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>
    <button type="submit" class="btn btn-primary">Create</button>

</form>
