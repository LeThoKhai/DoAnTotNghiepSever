@model WebSiteHocTiengNhat.Models.ReadingQuestion
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Create Reading question";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Level"></label>
        <select asp-for="Level" asp-items="ViewBag.Level" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="QuestionContent"></label>
        <textarea asp-for="QuestionContent" class="form-control" value="Empty">Question</textarea>
        <span asp-validation-for="QuestionContent" class="text-danger"></span>
    </div>
    <!-- Textbox for Link -->
    <div class="form-group">
        <label asp-for="Link" as for="imgFile">Upload img/Image</label>
        <input asp-for="Link" type="file" name="imgFile" id="imgFile" class="form-control" accept="img/*" />
    </div>
    <div class="form-group">
        <label asp-for="OptionA">A</label>
        <input asp-for="OptionA" class="form-control" value="" />
        <span asp-validation-for="OptionA" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="OptionB">B</label>
        <input asp-for="OptionB" class="form-control" value="" />
        <span asp-validation-for="OptionB" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="OptionC">C</label>
        <input asp-for="OptionC" class="form-control" value="" />
        <span asp-validation-for="OptionC" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="OptionD">D</label>
        <input asp-for="OptionD" class="form-control" value="" />
        <span asp-validation-for="OptionD" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Answer"></label>
        <select asp-for="Answer" asp-items="ViewBag.CorrectAnswer" class="form-control"></select>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
